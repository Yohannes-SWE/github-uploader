# =============================================================================
# PRODUCTION DEPLOYMENT CONFIGURATION
# =============================================================================

# Environment (development/production)
# ENVIRONMENT=development

# Base URLs (update these for production)
# BASE_URL=http://localhost:8000
# FRONTEND_URL=http://localhost:3000

# Production URLs (update these when deploying)
# GITHUB_CALLBACK_URL=https://your-backend-domain.com/api/auth/github/callback
# ALLOWED_ORIGINS=http://localhost:3000,https://your-frontend-domain.com

# =============================================================================
# CUSTOM DOMAIN CONFIGURATION (repotorpedo.com)
# =============================================================================

# For repotorpedo.com deployment
ENVIRONMENT=production
BASE_URL=https://api.repotorpedo.com
FRONTEND_URL=https://repotorpedo.com
GITHUB_CALLBACK_URL=https://api.repotorpedo.com/api/auth/github/callback
ALLOWED_ORIGINS=https://repotorpedo.com,https://www.repotorpedo.com

# =============================================================================
# REQUIRED CREDENTIALS
# =============================================================================

# GitHub OAuth (Required)
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret

# OpenAI API (For AI analysis)
OPENAI_API_KEY=your_openai_api_key

# App Configuration
SECRET_KEY=your_secret_key_here

# =============================================================================
# OPTIONAL PLATFORM INTEGRATIONS
# =============================================================================

# Vercel OAuth
VERCEL_CLIENT_ID=your_vercel_client_id
VERCEL_CLIENT_SECRET=your_vercel_client_secret

# Railway OAuth
RAILWAY_CLIENT_ID=your_railway_client_id
RAILWAY_CLIENT_SECRET=your_railway_client_secret

# Netlify OAuth
NETLIFY_CLIENT_ID=your_netlify_client_id
NETLIFY_CLIENT_SECRET=your_netlify_client_secret

# Heroku OAuth
HEROKU_CLIENT_ID=your_heroku_client_id
HEROKU_CLIENT_SECRET=your_heroku_client_secret

# CircleCI OAuth
CIRCLECI_CLIENT_ID=your_circleci_client_id
CIRCLECI_CLIENT_SECRET=your_circleci_client_secret

# Travis CI OAuth
TRAVIS_CLIENT_ID=your_travis_client_id
TRAVIS_CLIENT_SECRET=your_travis_client_secret

# =============================================================================
# ENTERPRISE CLOUD PLATFORMS (Optional)
# =============================================================================

# AWS Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1

# Google Cloud Platform
GCP_PROJECT_ID=your_gcp_project_id
GCP_SERVICE_ACCOUNT_KEY=your_gcp_service_account_json

# Microsoft Azure
AZURE_TENANT_ID=your_azure_tenant_id
AZURE_CLIENT_ID=your_azure_client_id
AZURE_CLIENT_SECRET=your_azure_client_secret

# DigitalOcean
DIGITALOCEAN_TOKEN=your_digitalocean_token

# Render
RENDER_API_KEY=your_render_api_key

# Fly.io
FLY_API_TOKEN=your_fly_api_token

# =============================================================================
# DEPLOYMENT PLATFORM SPECIFIC
# =============================================================================

# For Render deployment
# ENVIRONMENT=production
# BASE_URL=https://your-backend-name.onrender.com
# FRONTEND_URL=https://your-frontend-name.onrender.com
# GITHUB_CALLBACK_URL=https://your-backend-name.onrender.com/api/auth/github/callback
# ALLOWED_ORIGINS=https://your-frontend-name.onrender.com

# For Railway deployment
# ENVIRONMENT=production
# BASE_URL=https://your-app-name.railway.app
# FRONTEND_URL=https://your-frontend-domain.com
# GITHUB_CALLBACK_URL=https://your-app-name.railway.app/api/auth/github/callback
# ALLOWED_ORIGINS=https://your-frontend-domain.com

# For Vercel deployment
# ENVIRONMENT=production
# BASE_URL=https://your-backend-domain.com
# FRONTEND_URL=https://your-app.vercel.app
# GITHUB_CALLBACK_URL=https://your-backend-domain.com/api/auth/github/callback
# ALLOWED_ORIGINS=https://your-app.vercel.app

# For repotorpedo.com with subdomain API
# ENVIRONMENT=production
# BASE_URL=https://api.repotorpedo.com
# FRONTEND_URL=https://repotorpedo.com
# GITHUB_CALLBACK_URL=https://api.repotorpedo.com/api/auth/github/callback
# ALLOWED_ORIGINS=https://repotorpedo.com,https://www.repotorpedo.com 